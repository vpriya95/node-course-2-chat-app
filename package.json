{
    "name": "chat-app",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "node server/server.js",
        "stop": "forever stopall",
        "test-jenkins": "mocha server/utils/*.test.js --reporter mocha-junit-reporter",
        "test": "nyc --reporter=html --reporter=text mocha server/utils/*.test.js --timeout 1500",
        "test-watch": "nodemon --exec 'npm test'",
        "unit-test": "mocha server/utils/*.test.js --timeout 1500",
        "code-coverage-test": "nyc --reporter=html --reporter=text  mocha server/utils/*.test.js --timeout 1500",
        "e2etest": "testcafe puppeteer:no_sandbox server/testcafe/test.js -r spec,xunit:report.xml",
        "lighthouse:ci": "lighthouse --output-path=lighthouse-report.html --quiet --chrome-flags='--headless --no-sandbox=true' http://localhost:3000",
        "test-mochaawesome": "mocha server/utils/*.test.js --reporter mochawesome"
    },
    "engines": {
        "node": "9.5.0"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.16.2",
        "mocha-jenkins-reporter": "^0.3.12",
        "mocha-junit-reporter": "^1.17.0",
        "moment": "^2.20.1",
        "puppeteer": "^1.5.0",
        "socket.io": "^2.0.4",
        "testcafe": "^0.20.3",
        "testcafe-browser-provider-puppeteer": "^1.3.2"
    },
    "devDependencies": {
        "expect": "^1.20.2",
        "lighthouse": "^2.9.4",
        "mocha": "^5.0.1",
        "mochawesome": "^3.0.2",
        "nyc": "^12.0.2"
    }
}